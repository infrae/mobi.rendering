<div class="person">
  <style>
    div.avatar { float: left; }
    div.avatar img { margin: 0 10px 10px 0; }
  </style>
  <div class="avatar" tal:content="structure fieldwidget:context#avatar_url">
       Image widget
  </div>
  <div>${context.full_name}</div>
  <div tal:content="structure fieldwidget:context#phone_number">
      Phone Number Widget
  </div>
  <div style="clear: both" tal:content="structure widget:context.address">
      Address Widget
  </div>
</div>

